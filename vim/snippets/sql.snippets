snippet ctab
	-- --------------------------------------------------------------------- `strftime("%d/%m/%Y")`
	CREATE TABLE ${1:nombre_tabla}
		 ( 
			${2:id}           ${3:INT} 	       		${4:NOT NULL}, 
			${5:campo2}       ${6:NVARCHAR}(${7:50})     		${8:NULL}, 
			${9:campo3}       ${10:NVARCHAR}(${11:50})     		${12:NULL}, 
			${13:campo4}       ${14:NVARCHAR}(${15:50}) 	    	${16:NULL}
			CONSTRAINT PK_$1 PRIMARY KEY CLUSTERED ($2 ASC) ${14}
			ON [PRIMARY] 
		 )
	GO
	-- -------------------------------------------------------------------------------

