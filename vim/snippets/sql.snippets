snippet sel
	-- -----------------------------------------------
	SELECT ${1:campo1}, 
		   ${2:campo2},
		   ${3:campo3}
	  FROM ${4:tabla}
	 WHERE ${5:condicion}
	-- -----------------------------------------------
snippet sele
	-- -----------------------------------------------
	SELECT ${1:campo1}, 
		   ${2:campo2},
		   ${3:campo3}
	  FROM ${4:tabla1} AS ${5:t1} 
	  JOIN ${6:tabla2} AS ${7:t2} ON $5.${8:id} = $7.${9:$8}
	  
	 WHERE ${10:condicion}
	-- -----------------------------------------------
snippet selec
	-- -----------------------------------------------
	SELECT ${1:campo1}, 
		   ${2:campo2},
		   ${3:campo3}
	  FROM ${4:tabla1} AS ${5:t1} 
	  JOIN ${6:tabla2} AS ${7:t2} ON $5.${8:id} = $7.${9:$8}
	  
	 WHERE ${10:condicion}
	 GROUP BY ${11:campo1}
	 ORDER BY ${12:campo1} DESC ${13}
	-- -----------------------------------------------
